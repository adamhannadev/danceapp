<% content_for :title, "Join Our Dance Studio" %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card card-ballroom mt-5">
        <div class="card-header text-center">
          <div class="d-flex justify-content-center align-items-center mb-3">
            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" 
                 style="width: 60px; height: 60px;">
              <i class="fas fa-user-plus text-white fs-4"></i>
            </div>
            <div>
              <h2 class="h4 mb-1">Join Our Dance Studio</h2>
              <p class="text-muted mb-0">Create your account to start dancing</p>
            </div>
          </div>
        </div>
        
        <div class="card-body">
          <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), 
                       local: true, html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            
            <!-- Hidden fields for default values -->
            <%= f.hidden_field :membership_discount, value: 0 %>
            
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-inputs">
              <!-- Personal Information -->
              <div class="row mb-3">
                <div class="col-12">
                  <h6 class="fw-bold text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-user me-2"></i>Personal Information
                  </h6>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :first_name, class: "form-label fw-medium" %>
                  <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name", required: true %>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :last_name, class: "form-label fw-medium" %>
                  <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name", required: true %>
                </div>
              </div>

              <!-- Contact Information -->
              <div class="row mb-3">
                <div class="col-12">
                  <h6 class="fw-bold text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-envelope me-2"></i>Contact Information
                  </h6>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :email, class: "form-label fw-medium" %>
                  <%= f.email_field :email, class: "form-control", placeholder: "your@email.com", required: true, autofocus: true, autocomplete: "email" %>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :phone, class: "form-label fw-medium" %>
                  <%= f.telephone_field :phone, class: "form-control", placeholder: "(555) 123-4567" %>
                  <div class="form-text">Optional - for class reminders</div>
                </div>
              </div>
                </div>
              </div>

              <!-- Account Security -->
              <div class="row mb-3">
                <div class="col-12">
                  <h6 class="fw-bold text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-lock me-2"></i>Account Security
                  </h6>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :password, class: "form-label fw-medium" %>
                  <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                    <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
                  <% end %>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :password_confirmation, class: "form-label fw-medium" %>
                  <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
                </div>
              </div>

              <!-- Dance Studio Settings -->
              <div class="row mb-3">
                <div class="col-12">
                  <h6 class="fw-bold text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-music me-2"></i>Dance Studio Settings
                  </h6>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :role, class: "form-label fw-medium" %>
                  <%= f.select :role, [['Student', 'student'], ['Instructor', 'instructor']], { selected: 'student' }, { class: "form-select" } %>
                  <div class="form-text">Choose your primary role at the studio</div>
                </div>
                
                <div class="col-md-6 mb-3">
                  <%= f.label :membership_type, class: "form-label fw-medium" %>
                  <%= f.select :membership_type, [['No Membership', 'none'], ['Monthly', 'monthly'], ['Annual', 'annual']], { selected: 'none' }, { class: "form-select" } %>
                  <div class="form-text">Optional - you can upgrade later</div>
                </div>
              </div>

              <!-- Legal Requirements -->
              <div class="row mb-4">
                <div class="col-12">
                  <h6 class="fw-bold text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-file-signature me-2"></i>Legal Requirements
                  </h6>
                </div>
                
                <div class="col-12">
                  <div class="form-check">
                    <%= f.check_box :waiver_signed, class: "form-check-input" %>
                    <%= f.label :waiver_signed, "I agree to the liability waiver and terms of service", class: "form-check-label" %>
                  </div>
                  <small class="text-muted">Required to participate in dance classes and events</small>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <%= f.submit "Create Account", class: "btn btn-primary w-100 mb-3", data: { disable_with: "Creating Account..." } %>
            </div>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card-ballroom {
  border: none;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.form-label.fw-medium {
  font-weight: 500;
}

.border-bottom {
  border-color: #e9ecef !important;
}
</style>
