<!-- Private Lessons Grid for Students -->
<div class="row mb-4">
<div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="fas fa-user-graduate me-2"></i>My Private Lessons</h3>
    <span class="badge bg-primary"><%= (@dashboard_data[:private_lessons] || []).count %> lessons</span>
    </div>
    
    <% lessons = @dashboard_data[:private_lessons] || [] %>
    <% if lessons.any? %>
    <div class="row">
        <% lessons.each do |lesson| %>
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
            <div class="card-header bg-light border-0">
                <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="fas fa-calendar me-1"></i>
                    <%= lesson.scheduled_at.strftime("%B %d, %Y") %>
                </small>
                <span class="badge bg-secondary">
                    <% if lesson.scheduled_at > Time.current %>
                    <%= time_ago_in_words(lesson.scheduled_at) %> from now
                    <% else %>
                    <%= time_ago_in_words(lesson.scheduled_at) %> ago
                    <% end %>
                </span>
                </div>
            </div>
            <div class="card-body">
                <h6 class="card-title mb-2">
                <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>
                <%= lesson.instructor.full_name %>
                </h6>
                <div class="mb-2">
                <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    <%= lesson.scheduled_at.strftime("%I:%M %p") %>
                </small>
                </div>
                <% if lesson.notes.present? %>
                <div class="mt-3">
                    <small class="text-muted d-block mb-1">
                    <i class="fas fa-sticky-note me-1"></i>Notes:
                    </small>
                    <p class="card-text small text-muted">
                    <%= truncate(lesson.notes, length: 100) %>
                    </p>
                </div>
                <% else %>
                <div class="mt-3">
                    <small class="text-muted">
                    <i class="fas fa-sticky-note me-1"></i>No notes available
                    </small>
                </div>
                <% end %>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <div class="d-flex justify-content-between align-items-center">
                <% if lesson.scheduled_at > Date.current %>
                    <span class="badge bg-success">Upcoming</span>
                <% else %>
                    <span class="badge bg-info">Completed</span>
                <% end %>
                <small class="text-muted">
                    <i class="fas fa-money-bill-wave me-1"></i>
                    $<%= lesson.cost || 'TBD' %>
                </small>
                </div>
            </div>
            </div>
        </div>
        <% end %>
    </div>
    <% else %>
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No Private Lessons Found</h5>
        <p class="text-muted">You haven't scheduled any private lessons yet.</p>
        <%= link_to "Schedule a Lesson", private_lessons_path, class: "btn btn-primary" %>
    </div>
    <% end %>
</div>
</div>