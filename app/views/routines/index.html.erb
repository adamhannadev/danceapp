<% content_for :title, @page_title || "Routines" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-primary">
          <i class="fas fa-list-alt me-2"></i><%= @page_title || "Routines" %>
        </h1>
        
        <div class="d-flex gap-2">
          <% if @student.present? %>
            <%= link_to user_path(@student), class: "btn btn-outline-secondary" do %>
              <i class="fas fa-arrow-left me-1"></i>Back to <%= @student.full_name %>
            <% end %>
          <% end %>
          
          <% if can_edit_routines? %>
            <%= link_to new_routine_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus me-1"></i>New Routine
            <% end %>
          <% end %>
        </div>
      </div>
      
      <% if @student.present? %>
        <nav aria-label="breadcrumb" class="mb-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Dashboard", dashboard_path %></li>
            <li class="breadcrumb-item"><%= link_to "Users", users_path %></li>
            <li class="breadcrumb-item"><%= link_to @student.full_name, user_path(@student) %></li>
            <li class="breadcrumb-item active" aria-current="page">Routines</li>
          </ol>
        </nav>
      <% end %>

      <div class="card">
        <div class="card-body">
          <% if @routines.any? %>
            <div class="row">
              <% @routines.each do |routine| %>
                <div class="col-lg-6 col-xl-4 mb-4">
                  <div class="card h-100">
                    <div class="card-header bg-light">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h6 class="card-title mb-1">
                            <%= link_to routine.title, routine, class: "text-decoration-none" %>
                          </h6>
                          <small class="text-muted">
                            <strong>Assigned to:</strong> <%= routine.user.full_name %><br>
                            <strong>Created by:</strong> <%= routine.created_by.full_name %>
                          </small>
                        </div>
                        
                        <% if can_edit_routines? %>
                          <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                                    data-bs-toggle="dropdown" aria-expanded="false">
                              Actions
                            </button>
                            <ul class="dropdown-menu">
                              <li>
                                <%= link_to routine, class: "dropdown-item" do %>
                                  <i class="fas fa-eye me-2"></i>View
                                <% end %>
                              </li>
                              <li>
                                <%= link_to edit_routine_path(routine), class: "dropdown-item" do %>
                                  <i class="fas fa-edit me-2"></i>Edit
                                <% end %>
                              </li>
                              <li><hr class="dropdown-divider"></li>
                              <li>
                                <%= link_to routine, method: :delete, class: "dropdown-item text-danger",
                                      data: { 
                                        confirm: "Are you sure you want to delete this routine?",
                                        turbo_method: :delete
                                      } do %>
                                  <i class="fas fa-trash me-2"></i>Delete
                                <% end %>
                              </li>
                            </ul>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="card-body">
                      <div class="mb-2">
                        <span class="badge bg-primary me-1">
                          <%= routine.dance_category.name %>
                        </span>
                        <span class="badge bg-secondary">
                          <%= routine.dance_style.name %>
                        </span>
                      </div>
                      
                      <p class="card-text">
                        <%= truncate(routine.description.to_plain_text, length: 150) %>
                      </p>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                      <small class="text-muted">
                        Created <%= time_ago_in_words(routine.created_at) %> ago
                      </small>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-list-alt fa-3x text-muted mb-3"></i>
              <h4 class="text-muted">No routines found</h4>
              <p class="text-muted">
                <% if current_user.instructor? || current_user.admin? %>
                  Start by creating your first routine.
                <% else %>
                  No routines have been created yet.
                <% end %>
              </p>
              
              <% if current_user.instructor? || current_user.admin? %>
                <%= link_to new_routine_path, class: "btn btn-primary" do %>
                  <i class="fas fa-plus me-1"></i>Create First Routine
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
