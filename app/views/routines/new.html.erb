<% if @pre_selected_student.present? %>
  <% content_for :title, "New Routine for #{@pre_selected_student.full_name}" %>
<% else %>
  <% content_for :title, "New Routine" %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-primary">
          <i class="fas fa-plus me-2"></i>
          <% if @pre_selected_student.present? %>
            New Routine for <%= @pre_selected_student.full_name %>
          <% else %>
            New Routine
          <% end %>
        </h1>
        
        <div class="d-flex gap-2">
          <% if @pre_selected_student.present? %>
            <%= link_to user_path(@pre_selected_student), class: "btn btn-outline-info" do %>
              <i class="fas fa-user me-1"></i>Back to <%= @pre_selected_student.full_name %>
            <% end %>
          <% end %>
          
          <%= link_to routines_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-arrow-left me-1"></i>Back to Routines
          <% end %>
        </div>
      </div>
      
      <% if @pre_selected_student.present? %>
        <nav aria-label="breadcrumb" class="mb-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Dashboard", dashboard_path %></li>
            <li class="breadcrumb-item"><%= link_to "Users", users_path %></li>
            <li class="breadcrumb-item"><%= link_to @pre_selected_student.full_name, user_path(@pre_selected_student) %></li>
            <li class="breadcrumb-item active" aria-current="page">New Routine</li>
          </ol>
        </nav>
      <% end %>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-file-text me-2"></i>Create New Routine
          </h5>
        </div>
        <div class="card-body">
          <%= render 'form', routine: @routine %>
        </div>
      </div>
    </div>
  </div>
</div>
